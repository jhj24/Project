<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white">


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@mipmap/ic_top_bar_background_other"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="W,1.1:2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <include
            android:id="@+id/include_refresh_view"
            layout="@layout/layout_top_bar"
            app:layout_constraintTop_toTopOf="parent"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_refresh_view"
            app:layout_goneMarginTop="@dimen/statusbar_titlebar_view_height">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <include layout="@layout/layout_search_bar"/>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <include
                android:id="@+id/include_empty_view"
                layout="@layout/layout_empty_view"
                android:visibility="gone"/>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>