<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_dialog">

    <TextView
        android:id="@+id/tv_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/bill_padding_left"
        android:singleLine="true"
        android:text="单元工程"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/item_select_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bill_padding_left"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_name">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_editable" />


        <TextView
            android:id="@+id/tv_dialog_edit"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="编辑"
            android:textColor="@color/text_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dialog_delete"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/item_select_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bill_padding_left"
        app:layout_constraintTop_toBottomOf="@id/layout_dialog_edit">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_delete" />


        <TextView
            android:id="@+id/tv_dialog_delete"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="删除"
            android:textColor="@color/text_title" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>