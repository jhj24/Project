<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommitButtonLayout">
        <attr name="commitText" format="string" />
        <attr name="rejectText" format="string" />
        <attr name="isShowRejectButton" format="boolean" />

    </declare-styleable>

    <declare-styleable name="InputLayout">
        <attr name="il_style">
            <enum name="il_selector" value="0" />
            <enum name="il_input" value="1" />
            <enum name="il_multiLeftRight" value="2" />
            <enum name="il_switch" value="3" />
            <enum name="il_display" value="4" />
            <enum name="il_title" value="5" />
            <enum name="il_multiUpDown" value="6" /><!---->
        </attr>
        <attr name="il_labelText" format="string" />
        <attr name="il_labelTextColor" format="color" />
        <attr name="il_labelTextSize" format="float" />
        <attr name="il_labelTextGravity">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="il_isColonVisibility" format="boolean" />
        <attr name="il_contentText" format="string" />
        <attr name="il_contentTextColor" format="color" />
        <attr name="il_contentTextSize" format="float" />
        <attr name="il_contentTextGravity">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="il_hint" format="string" />
        <attr name="il_isOpen" format="boolean" />
        <attr name="il_isShowSwitchText" format="boolean" />
        <attr name="il_openText" format="string" />
        <attr name="il_closeText" format="string" />
        <attr name="il_isShowBottomLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabelInputLayout">
        <attr name="isShowBottomLine" />
        <attr name="labelText" format="string" />
        <attr name="labelTextColor" format="color" />
        <attr name="labelTextSize" format="integer" />
        <attr name="isShowLabelColon" format="boolean" />
        <attr name="labelTextGravity">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="inputText" format="string" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="hintText" format="string" />
        <attr name="unitText" format="string" />
        <attr name="unitTextColor" format="color" />
        <attr name="unitTextSize" format="dimension" />
        <attr name="isShowInputText" format="boolean" />
        <attr name="isCanInput" format="boolean" />
        <attr name="isArrowShow" format="boolean" />
        <attr name="style">
            <enum name="small" value="0" />
            <enum name="big" value="1" />
        </attr>
        <attr name="isMultiStyle" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GridImageLayout">
        <attr name="image_title" format="string" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="offColor" format="color" />
        <attr name="offColorDark" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="ratioAspect" format="float" />
        <attr name="isOpened" format="boolean" />
        <attr name="isShowText" format="boolean" />
        <attr name="openText" format="string" />
        <attr name="closeText" format="string" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

</resources>