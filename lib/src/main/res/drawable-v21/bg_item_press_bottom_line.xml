<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/bg_item_pressed">
    <item>
        <selector>

            <!-- 点击背景图-->
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/line_color" />
                        </shape>
                    </item>
                    <item android:bottom="1px">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/bg_item_pressed" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <!-- 未点击背景图-->
            <item android:state_pressed="false">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/line_color" />
                        </shape>
                    </item>
                    <item android:bottom="1px">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/bg_item_normal" />
                        </shape>
                    </item>
                </layer-list>

            </item>

        </selector>
    </item>

</ripple>