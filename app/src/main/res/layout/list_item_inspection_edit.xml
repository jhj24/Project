<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="@dimen/bill_height_item"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bill_padding_left"
        android:paddingRight="@dimen/bill_padding_right">

        <ImageView
            android:id="@+id/iv_punch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_punch" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="测试"
            android:textColor="#a6000000" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="是否正常"
            android:textColor="#a6000000" />

        <com.zgdj.lib.widget.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            app:closeText="否"
            app:isShowText="true"
            app:openText="是"
            app:textSize="12sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />
</LinearLayout>